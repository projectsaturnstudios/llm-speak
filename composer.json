{
    "name": "projectsaturnstudios/llm-speak",
    "description": "A Laravel package for connecting to LLM Providers like Gemini, Claude and ChatGPT",
    "type": "library",
    "version": "0.2.1",
    "license": "MIT",
    "authors": [
        {
            "name": "Project Saturn Studios, LLC",
            "email": "info@projectsaturnstudios.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {},
    "autoload":{
        "psr-4": {
            "LLMSpeak\\": "src/"
        },
        "files": [
          "src/Helpers/functions.php"
        ]
    },
    "autoload-dev":{
        "psr-4": {}
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "LLMSpeak\\Providers\\LLMSpeakServiceProvider"
            ]
        }

    }
}
